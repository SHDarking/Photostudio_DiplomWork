<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/CSS/main.css">
</head>
<body>
<header class="container-fluid">
    <nav class="row">
        <a asp-action="Index" asp-controller="Home" class="col">Домашняя</a>
        <a asp-action="Catalog" asp-controller="Home" class="col">Каталог</a>
        @if (User.Identity.IsAuthenticated)
        {
            @if(User.IsInRole("User")) {
                <a asp-action="CreateBooking" asp-controller="Reserving" class="col">Аренда зала</a>
            }
            <a asp-action="UserAdministrationPanel" asp-controller="Manage" class="col">Личный кабинет</a>
            <a asp-action="Logout" asp-controller="Account" class="col logout">Выйти</a>
        }
        else
        {
            <a asp-action="Registration" asp-controller="Account" class="col">Регистрация</a>
            <a asp-action="Login" asp-controller="Account" class="col login">Войти</a>
        }
    </nav>
</header>
@RenderBody()
</body>
</html>